<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs')%>
    <link rel="stylesheet" href="/css/editarProducto.css">
</head>

<body>
    <%- include('../partials/header.ejs') %>

    <main>

        <div id="editarProducto">
            <form action="/products/<%= productoEditar.id%>/edit?_method=PUT" method="POST" enctype="multipart/form-data">

                <h1>Editar Producto</h1>

                <label for="nombre">Nombre del Producto:</label>
                <input type="text" id="nombre" name="nombre" value="<%= productoEditar.nombre%>" required>

                <label for="descripcion">Descripción:</label>
                <input type="text" class="form-control" name="descripcion" placeholder="Descripción" required="required" value="<%= productoEditar.descripcion%>">

                <label for="imagenes">Selecciona una o más imagenes para el producto: </label>
                <input type="file" name="imagenes" accept=".jpg,.png" multiple>

                <select name="categoriaId">
                    <option selected disabled value="#">Elija la categoria
                    <% categorias.forEach(categoria => { %>
                        <option value=<%= categoria.id%>> <%= categoria.categoria %></option>
                    <% }) %>
                </select>

                <select name="colores">
                    <option selected disabled value="#">Elija el color
                    <% colores.forEach(color => { %>
                        <option value=<%= color.id%>> <%= color.color %></option>
                    <% }) %>
                </select>

                <label for="precio">Precio:</label>
                <input type="number" id="precio" name="precio" value="<%= productoEditar.precio%>" required>

                <button type="submit">Guardar Cambios</button>
            </form>
        </div>
    </main>


    <%- include('../partials/footer.ejs')%>
    <script src="/js/Product/ValidatorEditarProducto.js"></script>
</body>

</html>